{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": true,
  "tabWidth": 2,
  "singleQuote": true,
  "printWidth": 100,
  "trailingComma": "all",
  "arrowParens": "always",
  "plugins": ["prettier-plugin-tailwindcss", "@ianvs/prettier-plugin-sort-imports"],
  "importOrder": [
    "^vue$",
    "^vitest$",
    "<THIRD_PARTY_MODULES>",
    "^(@)(/.*)$",
    "^(@docs)(/.*)$",
    "^(@tests)(/.*)$",
    "^[.]",
    "^(?!.*[.]css$)[./].*$",
    ".css$"
  ],
  "importOrderTypeScriptVersion": "5.3.3",
  "endOfLine": "lf"
} 