{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "docs/**/*.ts", 
    "docs/**/*.vue", 
    "docs/**/*.md",
    "src/**/*.ts",
    "src/**/*.vue",
    ".vitepress/**/*.ts",
    ".vitepress/**/*.vue"
  ],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["../lib/src/*"],
      "@src/*": ["./src/*"],
      "@/*": ["../lib/src/*"]
    }
  },
  "vueCompilerOptions": {
    "vitePressExtensions": [".md"]
  }
} 